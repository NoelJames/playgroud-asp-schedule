    @Html.ActionLink("Create New", "Create", "Schedule", null, new { @class = "btn btn-primary pull-right" })
</p>

<h1>Event List (full)</h1>

<table class="table">
    <tr>
        <th>
             @Html.DisplayNameFor(model => model.event_id)
